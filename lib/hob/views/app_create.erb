<form action="/apps/create" method="POST">
    <fieldset>
        <div class="form-group">
            <label>Application Name</label>
            <input type="text" name="name">
        </div>

        <div class="form-group">
            <label>Git Repo</label>
            <input type="text" name="repo">
        </div>

        <div class="form-group">
            <label>Git Branch</label>
            <input type="text" name="branch">
        </div>

        <div class="form-group">
            <label>Ruby Version</label>
            <select name="ruby_version">
            <% ruby_versions.each do |v| %>
                <option><%= v %></option>
            <% end %>
            </select>
        </div>

        <div class="form-group">
            <label>Prepare commands</label>
            <textarea rows="10" name="prepare_commands"></textarea>
        </div>

        <div class="form-group">
            <label>Start commands</label>
            <textarea rows="4" name="start_commands"></textarea>
        </div>

        <div class="form-group">
            <label>Stop commands</label>
            <textarea rows="4" name="stop_commands"></textarea>
        </div>
    </fieldset>

    <button type="submit">Submit</button>
</form>
