<div class="form-group">
    <label>Application Name</label>
    <input type="text" name="name" value="<%= app.name %>">
    <% if errors[:name] %>
        <span class="error"><%= errors[:name] %></span>
    <% end %>
</div>

<div class="form-group">
    <label>Git Repo</label>
    <input type="text" name="repo" value="<%= app.repo %>">
</div>

<div class="form-group">
    <label>Git Branch</label>
    <input type="text" name="branch" value="<%= app.branch %>">
</div>

<div class="form-group">
    <label>Ruby Version</label>
    <select name="ruby_version">
    <% ruby_versions.each do |v| %>
        <option<%= ' selected' if v == app.ruby_version %>><%= v %></option>
    <% end %>
    </select>
</div>

<div class="form-group">
    <label>Prepare commands</label>
    <textarea rows="10" name="prepare_commands"><%= app.prepare_commands %></textarea>
</div>

<div class="form-group">
    <label>Test commands</label>
    <textarea rows="10" name="test_commands"><%= app.test_commands %></textarea>
</div>

<div class="form-group">
    <label>Start commands</label>
    <textarea rows="4" name="start_commands"><%= app.start_commands %></textarea>
</div>

<div class="form-group">
    <label>Stop commands</label>
    <textarea rows="4" name="stop_commands"><%= app.stop_commands %></textarea>
</div>
